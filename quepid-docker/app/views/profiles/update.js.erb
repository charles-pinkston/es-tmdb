<!-- Used when you update your general details in the profile page -->

$('#flash').html('<%= escape_javascript flash_messages %>');

$('[data-name]').html('<%= escape_javascript(current_user.name) %>');
$('[data-email]').html('<%= escape_javascript(current_user.email) %>');
$('[data-display-name]').html('<%= escape_javascript(current_user.display_name) %>');

$('[data-avatar="big"]').each(function(index, element) {
  element.src = '<%= escape_javascript(current_user.avatar_url(:big)) %>';
});

$('[data-avatar="small"]').each(function(index, element) {
  element.src = '<%= escape_javascript(current_user.avatar_url(:small)) %>';
});
